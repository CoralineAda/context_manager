.navbar.navbar-default{role: 'navigation'}
  .container
    .navbar-header
      %a.navbar-brand{href: "/"}
        Gramercy

    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{class: controller.controller_name.eql?('contexts') ? "active" : ""}
          = link_to "Contexts", gramercy_meta_contexts_path
        %li{class: controller.controller_name.eql?('roots') ? "active" : ""}
          = link_to "Roots", gramercy_meta_roots_path
        %li{class: controller.controller_name.eql?('parts_of_speech') ? "active" : ""}
          = link_to "Parts of Speech", gramercy_part_of_speech_generics_path
        %li{class: controller.controller_name.eql?('parsers') ? "active" : ""}
          = link_to "Sentence Parser", new_parser_path
        %li{class: controller.controller_name.eql?('categories') ? "active" : ""}
          %a.dropdown-toggle{data: {toggle: "dropdown"}, role: "button"}
            Facts
            %span.caret
          %ul.dropdown-menu{role: "menu"}
            %li
              = link_to "Query", new_is_a_category_path
            %li
              = link_to "List", is_a_categories_path
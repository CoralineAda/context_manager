%h1
  = @root.base_form
  .pull-right.small
    root

%table.table.table-striped.table-hover
  %thead
    %tr
      %th.col-md-3 Context
      %th.col-md-3 Synonyms
      %th.col-md-3 Antonyms
      %th.col-md-3 Related

  %tbody
    - @root.contexts.each do |context|
      %tr.active
        %td
          = link_to context.name, gramercy_meta_context_path(context)
        %td
          - @root.synonyms_in_context(context).to_a.each do |word|
            = link_to word.base_form, gramercy_meta_root_path(word)
            %br
        %td
          - @root.antonyms_in_context(context).to_a.each do |word|
            = link_to word.base_form, gramercy_meta_root_path(word)
            %br
        %td
          - @root.related_in_context(context).to_a.each do |word|
            = link_to word.base_form, gramercy_meta_root_path(word)
            %br

%table.table.table-striped.table-hover
  %thead
    %tr
      %th.col-md-3 Part of Speech
      %th.col-md-3 Base Form
      %th.col-md-3
  %tbody
    - @root.forms.each do |form|
      %tr
        %td
          = form.type
        %td
          = form.base_form
        %td
    %tr
      %td
        = link_to "Add New", edit_part_of_speech_path(root_base_form: @root.base_form, id: 1)


